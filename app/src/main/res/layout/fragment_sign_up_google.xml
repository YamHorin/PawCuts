<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.signUpFragments.SignUpGoogleFragment">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/SignUpGoogleFragment_FAB_goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/SmallSpace"
        android:layout_marginTop="@dimen/SmallSpace"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/click_here_to_go_back_to_the_start_screen"
        android:src="@drawable/baseline_chevron_left_24" />
    <RadioGroup
        android:id="@+id/SignUpGoogleFragment_RG"
        android:layout_below="@id/SignUpGoogleFragment_ACIV_imageDoggy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/SmallSpace"
        android:layout_marginTop="@dimen/spaceSize"
        >

        <RadioButton
            android:id="@+id/SignUpGoogleFragment_RB_PetOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/i_am_a_pet_owner"
            android:textStyle="bold"
            />


        <RadioButton
            android:id="@+id/SingnUpGoogleFragment_RB_PetBarber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/i_am_a_pet_barber"
            android:textStyle="bold"
            />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/SignUpGoogleFragment_ACIV_imageDoggy"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/SmallSpace"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/SignUpGoogleFragment_ACIV_imageDoggy"
        android:text="@string/please_select_your_user_type"
        android:textSize="@dimen/stringSize"
        android:layout_marginStart="@dimen/SmallSpace"
        android:textStyle="bold"
        app:fontFamily="@font/poppins_semibold"



        >
    </com.google.android.material.textview.MaterialTextView>

</RelativeLayout>