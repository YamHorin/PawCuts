<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".fragments.barberFragments.MenuBarBarberFragment">



    <LinearLayout
        android:id="@+id/navigation_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blue">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menuBarBarberFragment_navigation_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calendar"
            app:icon="@drawable/calendar"
            app:iconGravity="textTop"
            android:gravity="center"
            android:padding="8dp"
            app:rippleColor="@color/colorAccent"
            android:backgroundTint="@android:color/transparent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menuBarBarberFragment_navigation_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/profile"
            app:icon="@drawable/ic_profile"
            app:iconGravity="textTop"
            android:gravity="center"
            android:padding="8dp"
            app:rippleColor="@color/colorAccent"
            android:backgroundTint="@android:color/transparent" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/menuBarBarberFragment_navigation_reviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reviews"
            app:icon="@drawable/reviews"
            app:iconGravity="textTop"
            android:gravity="center"
            android:padding="8dp"
            app:rippleColor="@color/colorAccent"
            android:backgroundTint="@android:color/transparent" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/menuBarBarberFragment_navigation_logOut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/log_out"
            app:icon="@drawable/logout__1_"
            app:iconGravity="textTop"
            android:gravity="center"
            android:padding="8dp"
            app:rippleColor="@color/colorAccent"
            android:backgroundTint="@android:color/transparent" />

    </LinearLayout>




</FrameLayout>