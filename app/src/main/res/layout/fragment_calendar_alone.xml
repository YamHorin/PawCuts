<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.appointmentFragments.CalendarAloneFragment">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/CalendarAloneFragment_FAB_goBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/SmallSpace"
        android:layout_marginTop="@dimen/SmallSpace"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/click_here_to_go_back_to_the_start_screen"
        android:src="@drawable/baseline_chevron_left_24" />

    <CalendarView
        android:id="@+id/CalendarAloneFragment_CV"
        style="@style/ThemeOverlay.MaterialComponents.MaterialCalendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/CalendarAloneFragment_FAB_goBack"
        android:layout_margin="@dimen/SmallSpace" />



</RelativeLayout>